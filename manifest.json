{
    "name": "webActivities",
    "description": "An extension to track web activities",
    "homepage_url": "http://chrome.google.com/webstore",
    "version": "2.0.0",
    "version_name": "2.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "109",
    "permissions": [
        "storage",
        "webNavigation",
        "webRequest",
        "tabs",
        "activeTab",
        "scripting",
        "history",
        "downloads",
        "nativeMessaging",
        "unlimitedStorage",
        "alarms",
        "offscreen",
        "contextMenus"
    ],
	"host_permissions": [
	  "*://*/*",
      "<all_urls>"
	],
    "background": {
        "service_worker": "./dist/background.bundle.js"
    },
    "action": {
        "default_title": "webActivities",
        "default_popup": "./dist/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./dist/devtoolsdetect.bundle.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["./dist/checktitle.bundle.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["./dist/draggablerecording.bundle.js"],
            "run_at": "document_end"
          }
    ],
    "web_accessible_resources": [
        {
            "resources": ["./dist/devtoolsdetect.bundle.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["./dist/checktitle.bundle.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["./dist/draggablerecording.bundle.js"],
            "matches": ["<all_urls>"]
        }
    ]
}